.stage-status
  max-width: 800px
  margin: 0 auto

  .progress-wrapper
    padding: 8px 0 0
    position: relative

    img
      position: relative
      filter: grayscale( 1 );

    .percentage
      position: absolute
      top: 0
      left: 0
      height: 100%
      background: rgba( 255, 255, 255, 0.2 )
      border-right: 1px solid #ddd
      box-sizing: border-box
      transition: 300ms width

  .stats
    margin: 0
    display: flex
    justify-content: center
    flex-wrap: wrap

    .stat
      flex-grow: 1
      padding: 8px

      &:nth-child( odd )
        background: #f5f5f5

      &:nth-child( even )
        background: #f0f0f0

      h2
        font-weight: normal
        margin: 0 0 5px
        font-size: 0.9em

      p
        font-size: 1.3em
        line-height: 1


