.riders
  max-width: 800px
  margin: 30px auto

  .group-riders
    margin: 0 0 30px 0

    h2
      font-size: .8em
      margin: 0 0 6px 0
      font-weight: bold

    .rider
      margin: 0 0 5px 0
      overflow: hidden

      h3
        font-size: .8em
        font-weight: bold
        margin: 6px 0 2px 0
        color: #444

      h4
        font-size: .8em
        margin: 0
        font-weight: normal

      img
        max-width: 35px
        float: left
        margin: 0 5px 0 0
